{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "skeleton-components": {
      "projectType": "library",
      "root": "projects/skeleton-components",
      "sourceRoot": "projects/skeleton-components/src",
      "prefix": "scs",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/skeleton-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/skeleton-components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/skeleton-components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "./jest.config.ts"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/**/*.ts",
              "projects/**/*.html"
            ]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "skeleton-components:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "./generated"
            ],
            "port": 6006
          },
          "configurations": {
            "ci": {
              "quiet": true
            }
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "skeleton-components:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "./generated"
            ],
            "outputDir": "storybook-static"
          },
          "configurations": {
            "ci": {
              "quiet": true
            }
          }
        }
      }
    }
  }
}